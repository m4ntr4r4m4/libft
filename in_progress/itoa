#include "libft.h"

int		memory(int	n)
{
	int	i;

	i = 0;
	if (n <= 0)
	{
		i++;
		n *= -1;
	}
	while (n != 0)
	{
		n /= 10;
		i++;
	}
	return (i);
}

char	*ft_putnbr(long num, char *str, int	i)
{
	
	if (num < 0)
	{
		str[i++] = '-';
		num = -num;
	}
	if (num >= 10)
		ft_putnbr(num / 10, str, i++);
	str[i] = ((num % 10) + 48);
	return (str);
}

char	*ft_itoa(int n)
{
	char	*total;
	int		i;
	long	num;
	int     var;

	num = n;
	var = memory(num) + 1;
	i = 0;
	total = malloc(sizeof(char) * (var));
	total = ft_putnbr(num, total, i);
	total[var - 1] = '\0';
	return (total);
}
